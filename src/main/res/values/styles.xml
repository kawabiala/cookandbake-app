<resources>

    <!-- Base application theme. -->
    <style name="CookAndBakeAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CookAndBakeAppTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#ffffff</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_cookandbake_launcher</item>
        <item name="postSplashScreenTheme">@style/CookAndBakeAppTheme</item>
    </style>

